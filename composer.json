{
    "name": "cloudingcity/kata",
    "description": "Kata.",
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Clouding\\Kata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Clouding\\Kata\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "phpunit --verbose",
        "phpcs": "phpcs -p"
    }
}
